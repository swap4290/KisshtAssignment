<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".view.Screen2Activity">


        <EditText
            android:id="@+id/unsplash_picker_edit_text"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:visibility="gone"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/unsplash_picker_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/unsplash_picker_no_result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/unsplash_picker_progress_bar_layout"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true"
            android:visibility="visible"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</layout>


